[alias]
  df = diff --word-diff --color-words
  dc = diff --word-diff --color-words --cached
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --decorate=full --all
  who = shortlog -s -s-
