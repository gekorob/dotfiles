[core]
  editor = vim
	excludesfile = /home/rciatti/.gitignore
[alias]
  df = diff --word-diff --color-words:q  dc = diff --word-diff --color-words --cached
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --decorate=full --all
  who = shortlog -s -s-
  sla = log --oneline --decorate --graph --all
[push]
	default = simple
[merge]
  tool = vimdiff
[diff]
  tool = vimdiff
[url "git@github.com:"]
  insteadOf = https://github.com/
[pull]
	rebase = true
